                                <Button x:Name="Reset" Grid.Column="2" Margin="3 0 0 0" Background="#2196F3" BorderBrush="#2196F3" Padding="0" ToolTip="Reset default" Click="Reset_Click">
                                    <materialDesign:PackIcon Kind="BackupRestore" Height="25" Width="25" Foreground="White" />
                                </Button>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Slider  TickFrequency="5"
                                               x:Name="SizeSliderControlHeight"
                                               Orientation="Horizontal"
                                               TickPlacement="BottomRight"
                                               Minimum="50"
                                               Maximum="150"
                                               Value="{Binding Height,Mode=TwoWay,Converter={StaticResource SliderCoverter},UpdateSourceTrigger=PropertyChanged}"
                                               Width="210" 
                                               IsSelectionRangeEnabled="True" />
                            </Grid>
                            <Grid Grid.Row="3" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*" ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"  Margin="5 0 5 5" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Size Percent" Text="{Binding ElementName=SizeSliderControlHeight,Path=Value,Converter={StaticResource Aroundsliders}}"  IsReadOnly="True" FontSize="20"></TextBox>
                                <Grid Grid.Column="1">
                                    <Button Uid="UpSize"  Height="24" Width="50" Margin="1" VerticalAlignment="Top" Padding="0" Background="#2196F3" BorderBrush="#2196F3" Click="Upsize_Click">
                                        <materialDesign:PackIcon  Kind="ChevronUp" Width="40" Height="24"/>
                                    </Button>
                                    <Button Uid="DownSize" Height="24" Width="50" Margin="1" VerticalAlignment="Bottom"  Padding="0" Background="#2196F3" BorderBrush="#2196F3" Click="Downsize_Click">
                                        <materialDesign:PackIcon Kind="ChevronDown" Height="24" Width="40" />
                                    </Button>
                                </Grid>
                            </Grid>
                            <Grid  Grid.Row="4" Height="140"  Width="140"  HorizontalAlignment="Right">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Name="Up" Width="40" Height="35" Grid.Column="1" VerticalAlignment="Top" Padding="0" Margin="0 14 0 0" Background="#2196F3" BorderBrush="#2196F3"  Click="Up_Click">
                                    <materialDesign:PackIcon Kind="ArrowUpBold" Height="20" Width="20"/>
                                </Button>
                                <Button Name="Down" Width="40" Height="35" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 0 14" Padding="0" Background="#2196F3" BorderBrush="#2196F3" Click="Down_Click" >
                                    <materialDesign:PackIcon Kind="ArrowDownBold" Height="20" Width="20"/>
                                </Button>
                                <Button Name="Left"  Width="35" Height="40" Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" Padding="0" Background="#2196F3" BorderBrush="#2196F3" Click="Left_Click">
                                    <materialDesign:PackIcon Kind="ArrowLeftBold" Height="20" Width="20"/>
                                </Button>
                                <Button Name="Right"  Width="35" Height="40" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="1" Padding="0" Background="#2196F3" BorderBrush="#2196F3" Click="Right_Click">
                                    <materialDesign:PackIcon Kind="ArrowRightBold" Height="20" Width="20"/>
                                </Button>
                            </Grid>
                            <StackPanel  Grid.Row="4" Width="87" Height="140"   HorizontalAlignment="Left"  >
                                <StackPanel>
                                    <TextBox Width="80" VerticalAlignment="Top" Text="{Binding Margin.Left,Mode=TwoWay}"  HorizontalAlignment="Left" Margin="5 0 0 0" FontSize="14" x:Name="Left_distance"
                         materialDesign:HintAssist.Hint="Left distance" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                    <TextBox  VerticalAlignment="Top" Width="80" HorizontalAlignment="Left" Text="{Binding Margin.Top,Mode=TwoWay}" Margin="5 0 0 0" FontSize="14" x:Name="Top_distance"
                         materialDesign:HintAssist.Hint="Top distance"   
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                </StackPanel>
                                <ToggleButton x:Name="ToogleKeyButton" VerticalAlignment="Center"
                         Style="{StaticResource MaterialDesignActionToggleButton}"
                         ToolTip="Working Key" Height="48" Width="48" Margin="0 7 0 0" Background="#2196f3">
                                    <ToggleButton.Content>
                                        <Binding Path="Fontkey"/>
                                    </ToggleButton.Content>
                                    <materialDesign:ToggleButtonAssist.OnContent>
                                        <Binding Path="Behindkey"/>
                                    </materialDesign:ToggleButtonAssist.OnContent>
                                </ToggleButton>
                            </StackPanel>
                            <Grid Grid.Row="5">
                                <Border VerticalAlignment="Top" Height="1" Background="#2196f3" CornerRadius="1"></Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" x:Name="VehicleCheckbox" IsChecked="False" Background="#2196f3"  VerticalAlignment="Center">
                                        <TextBlock FontSize="14">Vehicle</TextBlock>
                                    </CheckBox>
                                    <CheckBox  Grid.Column="1" x:Name="ControlCheckbox" IsChecked="True" Background="#2196f3" VerticalAlignment="Center">
                                        <TextBlock FontSize="14">Control</TextBlock>
                                    </CheckBox>
                                    <CheckBox  Grid.Column="2" x:Name="SwimCheckbox" IsChecked="False" Background="#2196f3"  VerticalAlignment="Center">
                                        <TextBlock FontSize="14">Swim</TextBlock>
                                    </CheckBox>
                                </Grid>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1"  materialDesign:ShadowAssist.ShadowEdges="All"
                              Height="45" Width="255"
                              HorizontalAlignment="Right" 
                              Padding="0"                      
                              Margin="0 5 10 0 ">
                        <Grid Background="#64b5f6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="OpenFunction_Menu" Height="42"  Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" >
                                <materialDesign:PackIcon Kind="Function" Height="40" Width="40" Foreground="White" />
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="ButtonBase.Click">
                                        <BeginStoryboard Storyboard="{StaticResource OpenMenu_Function}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button  x:Name="OpenMore_Menu" Grid.Column="1"  Background="{x:Null}" BorderBrush="{x:Null}" Height="42" Padding="0">
                                <materialDesign:PackIcon Kind="Settings" Height="40" Width="40" Foreground="White"/>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="ButtonBase.Click">
                                        <BeginStoryboard Storyboard="{StaticResource OpenMenu_More}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </Grid>
                    </materialDesign:Card>
                </StackPanel>
                <Grid Grid.Column="1"  HorizontalAlignment="Right" Width="0" x:Name="Menu_Function" Background="White">
                    <StackPanel>
                        <Border Margin="8" BorderThickness="1" BorderBrush="#2196f3">
                            <Button Background="{x:Null}" BorderBrush="{x:Null}" Height="50">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="ButtonBase.Click">
                                        <BeginStoryboard Storyboard="{StaticResource CloseMenu_Function}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                                <materialDesign:PackIcon Kind="ChevronDoubleRight" Height="40" Width="40" Foreground="#2196f3"/>
                            </Button>
                        </Border>
                        <Border Margin="10 0 10 10" Height="430" BorderThickness="1" BorderBrush="#2196f3" Padding="2">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <StackPanel>
                                    <Grid Height="40">
                                        <CheckBox x:Name="ALLOWMIRRORSCREEN" HorizontalAlignment="Center" Content="Allow screen mirroring"></CheckBox>
                                    </Grid>
                                    <Border BorderThickness="0.5" BorderBrush="#2196f3" Margin="4"></Border>
                                    <StackPanel Margin="0 5 0 5">
                                        <TextBlock HorizontalAlignment="Center" Margin="2" >Opacity of the mirror</TextBlock>
                                        <Slider x:Name="OPACITYOFMIRROR" Margin="5 4 5 4" TickFrequency="5" Orientation="Horizontal"  TickPlacement="BottomRight"  Minimum="1"  Maximum="100" Value="100"  IsSelectionRangeEnabled="true" />
                                    </StackPanel>
                                    <Border BorderThickness="0.5" BorderBrush="#2196f3" Margin="4"></Border>
                                    <StackPanel Margin="0 5 0 5" Height="60" Orientation="Horizontal">
                                        <Button Margin="5" Height="40" Width="40" x:Name="Choosepattdialog" Click="Choosepattdialog_Click"
  Style="{StaticResource MaterialDesignFloatingActionButton}"
  materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
  materialDesign:ButtonProgressAssist.Value="-1"
  materialDesign:ButtonProgressAssist.IsIndeterminate="True"
  Content="{materialDesign:PackIcon DotsHorizontal}" />
                                        <TextBox VerticalAlignment="Center" Margin="10" x:Name="PATHSAVESNAPSHOOT" IsReadOnly="True"
  materialDesign:HintAssist.Hint="Path save screenshot" Width="150" Text="Documents"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    </StackPanel>
                                    <Border BorderThickness="0.5" BorderBrush="#2196f3" Margin="4"></Border>
                                    
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <Grid  VerticalAlignment="Center" Margin="10 0 10 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Saveuser"  Grid.Column="0" Margin="0 0 7 0" Padding="0" Background="#2196F3" BorderBrush="#2196F3" ToolTip="Save params" Click="Saveuser_Click" >
                                <materialDesign:PackIcon Kind="ContentSave" Height="25" Width="25" Foreground="White"/>
                            </Button>
                            <Button x:Name="Canceluser" Grid.Column="1" Margin="0 0 7 0" Padding="0" Background="#2196F3" BorderBrush="#2196F3" ToolTip="Cancel job" Click="Canceluser_Click" >
                                <materialDesign:PackIcon Kind="Cancel" Height="25" Width="25" Foreground="White" />
                            </Button>
                            <Button x:Name="Resetuser" Grid.Column="2" Margin="3 0 0 0" Background="#2196F3" BorderBrush="#2196F3" Padding="0" ToolTip="Reset default" Click="Resetuser_Click">
                                <materialDesign:PackIcon Kind="BackupRestore" Height="25" Width="25" Foreground="White" />
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1"  HorizontalAlignment="Right" Width="0" x:Name="Menu_More" Background="White">
                    <StackPanel>
                        <Border Margin="8" BorderThickness="1" BorderBrush="#2196f3">
                            <Button Background="{x:Null}" BorderBrush="{x:Null}" Height="50">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="ButtonBase.Click">
                                        <BeginStoryboard Storyboard="{StaticResource CloseMenu_More}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                                <materialDesign:PackIcon Kind="ChevronDoubleRight" Height="40" Width="40" Foreground="#2196f3"/>
                            </Button>
                        </Border>
                        <Border Margin="10 0 10 10" Height="480" BorderThickness="1" BorderBrush="#2196f3" Padding="2">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <ItemsControl x:Name="FunctionListView"
                                      Grid.IsSharedSizeScope="True">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type functionkeymodel:FunctionkeyModel}">
                                            <Border
                                        x:Uid="Border"
                                        Padding="8"
                                        BorderThickness="0 0 0 1"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz"/>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <ToggleButton VerticalAlignment="Center"
                                                          Foreground="#448AFF"
                                                          Background="#BBDEFB"
                                                          IsChecked="True"
                                                 Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                                          Content="{Binding Key}"/>
                                                    <StackPanel
                                                Margin="8 0 0 0"
                                                Grid.Column="1">
                                                        <TextBlock
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}"/>
                                                        <TextBlock
                                                    Text="{Binding Description}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </materialDesign:Card>
</Window>
